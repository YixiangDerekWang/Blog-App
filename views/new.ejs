<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Blog</div>
  <form action="/blogs" method="post" class="ui form">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="title">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="image">
    </div>
    <div class="field">
      <label>Content</label>
      <textarea name="blog[body]" cols="30" rows="10"></textarea>
    </div>
    <button class="ui secondary button" type="submit">Okay</button>
  </form>
</div>

<% include partials/footer %>